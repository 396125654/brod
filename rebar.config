%% -*- mode:erlang -*-
{erl_opts,            [ warnings_as_errors
                      , warn_unused_vars
                      , warn_shadow_vars
                      , warn_unused_import
                      , {d, 'NOTEST', true}]}.
{xref_checks,         [ fail_on_warning
                      , undefined_function_calls
                      , deprecated_function_calls
                      ]}.
{eunit_opts,          [{report,{eunit_surefire,[{dir,"."}]}}]}.
{cover_enabled,       true}.
{cover_print_enabled, true}.
{lib_dirs,            ["deps"]}.
{deps_dir,            ["deps"]}.
